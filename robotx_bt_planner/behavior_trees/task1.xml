<?xml version="1.0"?>
<root main_tree_to_execute="Task1">

    <!-- include turn subtree -->
    <include ros_pkg="robotx_bt_plannner" path="behavior_trees/turn.xml"/>
    
    <BehaviorTree ID="Task1">
        <Sequence>
            <!-- subscribe pinger gate position -->
            <RetryUntilSuccesful num_attempts="">
                <Action ID="SubscribeAction"/> 
            </RetryUntilSuccesful>

            <!-- move to pinger gate -->
            <Action ID="MoveGoalActiuon" goal_x="10.0" goal_y="5.0" goal_theta="0.0"/>

            <!-- turn around a buoy -->
            <Subtree ID="Turn"/>

            <!-- move to exit pinger gate  -->
            <Action ID="MoveGoalActiuon" goal_x="10.0" goal_y="5.0" goal_theta="0.0"/>
            
        </Sequence>
    </BehaviorTree>
</root>
