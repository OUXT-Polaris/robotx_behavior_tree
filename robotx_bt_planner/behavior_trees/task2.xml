<?xml version="1.0"?>
<root main_tree_to_execute="Task1">

    <!-- include turn subtree -->
    
    <include path="/home/kenta/ouxt_automation/robotx_ws/src/planning/robotx_behavior_tree/robotx_bt_planner/behavior_trees/turn.xml"/>
    
    <BehaviorTree ID="Task1">
        <Sequence>
            <!-- subscribe pinger gate position -->
            <!--
            <RetryUntilSuccesful num_attempts="">
                <Action ID="SubscribeAction"/> 
            </RetryUntilSuccesful>
            -->
            <Action ID="WaitAction" planner_status="{planner_status}" task_objects="{task_objects}" wait_time="3.0"/>
 
            <!-- move to pinger gate -->
            <Action ID="MoveGoalAction" planner_status="{planner_status}" task_objects="{task_objects}" goal_x="10.0" goal_y="5.0" goal_theta="0.0"/>

            <!-- turn around a buoy -->
            
            <SubTree ID="Turn"/>
           

            <!-- move to exit pinger gate  -->
            <Action ID="MoveGoalAction" planner_status="{planner_status}" task_objects="{task_objects}" goal_x="10.0" goal_y="5.0" goal_theta="0.0"/>
            
        </Sequence>
    </BehaviorTree>
</root>
